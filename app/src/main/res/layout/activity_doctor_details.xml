<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/docdet"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/colorBlueBlossom"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor's Details"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:src="@drawable/no_profile_pic"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textStyle="bold"
            android:layout_below="@id/profile_picture"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/label_name"
            android:layout_alignBaseline="@id/label_name"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/label_qualifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qualifications:"
            android:textStyle="bold"
            android:layout_below="@id/label_name"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/doctor_qualifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/label_qualifications"
            android:layout_alignBaseline="@id/label_qualifications"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/label_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textStyle="bold"
            android:layout_below="@id/label_qualifications"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/doctor_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/label_address"
            android:layout_alignBaseline="@id/label_address"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/label_chamber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chamber:"
            android:textStyle="bold"
            android:layout_below="@id/label_address"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/doctor_chamber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/label_chamber"
            android:layout_alignBaseline="@id/label_chamber"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/label_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital:"
            android:textStyle="bold"
            android:layout_below="@id/label_chamber"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/doctor_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/label_hospital"
            android:layout_alignBaseline="@id/label_hospital"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/label_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialized in:"
            android:textStyle="bold"
            android:layout_below="@id/label_hospital"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/doctor_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/label_category"
            android:layout_alignBaseline="@id/label_category"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/label_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:textStyle="bold"
            android:layout_below="@id/label_category"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/doctor_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/label_phone"
            android:layout_alignBaseline="@id/label_phone"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black" />
    </RelativeLayout>
</ScrollView>